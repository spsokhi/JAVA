import java.util.Scanner;
public class Basic 
{
public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	int a=sc.nextInt();
	int i;
	int even=0;
	int odd=0;
	for(i=1;i<=a;i++)
	{
		if(i%2==0)
		{
			even+=i;
		}
		else
		{
			odd+=i;
		}
	}
	System.out.println(even+" "+odd);
}
}
